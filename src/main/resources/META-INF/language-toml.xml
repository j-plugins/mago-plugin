<idea-plugin>
    <extensions defaultExtensionNs="com.intellij">
        <fileType
                name="Mago File"
                implementationClass="com.github.xepozz.mago.file.MagoTomlFileType"
                fieldName="INSTANCE"
                language="TOML"
                fileNames="mago.toml"
                fileNamesCaseInsensitive="mago.toml"
                order="before mago.toml"
        />
        <psi.referenceContributor
                language="TOML"
                implementation="com.github.xepozz.mago.config.reference.FileSetReferenceContributor"
        />
        <psi.referenceContributor
                language="TOML"
                implementation="com.github.xepozz.mago.config.reference.NamespaceReferenceContributor"
        />
        <completion.contributor
                language="TOML"
                implementationClass="com.github.xepozz.mago.config.reference.ConfigCompletionContributor"
        />
    </extensions>
</idea-plugin>
